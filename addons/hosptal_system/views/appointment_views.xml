<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hospital_appointment_view_tree" model="ir.ui.view">
        <field name="name">hospital.appointments.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments List">
               <field name="name" optional="show" />
               <field name="patient_id"/>
               <field name="appointment_date"/>
               <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="hospital_appointment_view_form" model="ir.ui.view">
        <field name="name">hospital.appointments.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment Form">
                <header>
                    <button name="action_done" type="object" string="Done" class="oe_highlight"/>
                    <button name="action_change" type="object" string="Change Status" class="oe_highlight"/>
                </header>
                <header>
                    <field name="status" widget="statusbar" 
                    options="{'clickable': 1} "
                    statusbar_colors="{'draft': 'blue', 'confirmed': 'orange', 'done': 'green', 'cancelled': 'red'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="patient_id"/>
                        <field name="appointment_date"/>                    
                        <field name="total_quantity"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Appointment Lines">
                            <field name="appointment_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> 
                Create your first Appointment record
            </p>
        </field>
    </record>


    
</odoo>
