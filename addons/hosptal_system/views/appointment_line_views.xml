<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hospital_appointment_line_view_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.line.tree</field>
        <field name="model">hospital.appointment.line</field>
        <field name="arch" type="xml">
            <tree string="Appointments Lines" editable="bottom">
               <field name="appointment_id"/>
               <field name="product_id"/>
               <field name="quantity"/>
            </tree>
        </field>
    </record>
    <record id="action_hospital_appointment_line" model="ir.actions.act_window">
        <field name="name">Appointments Lines</field>   
        <field name="res_model">hospital.appointment.line</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> 
                Create your first Appointment Line record
            </p>
        </field>
    </record>


    
</odoo>
