<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hospital_patient_tag_view_tree" model="ir.ui.view">
        <field name="name">hospital.patients.tag.tree</field>
        <field name="model">hospital.patient.tag</field>
        <field name="arch" type="xml">
            <tree string="Patient Tag List" editable="bottom">
                <field name="name" optional="show" />
            </tree>
        </field>
    </record>


    <record id="action_hospital_patient_tag" model="ir.actions.act_window" >
        <field name="name">Patient Tags</field>
        <field name="res_model">hospital.patient.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> 
                Create your first patient tag
            </p>
        </field>
    </record>
</odoo>
