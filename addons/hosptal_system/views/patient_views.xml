<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patients.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient List">
                <field name="name" optional="show" />
                <field name="age" optional="show" />
                <field name="gender" optional="show" />
                <field name="date_of_birth" optional="show" />
            </tree>
        </field>
    </record>

    <record id="hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hospital.patients.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                </sheet>
                <sheet>
                    <group>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                        <field name="patient_tag_ids" widget="many2many_tags"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"> 
                Create your first patient record
            </p>
        </field>
    </record>
</odoo>
